package view

templ Landing() {
	<!DOCTYPE html>
	<html lang="en" data-theme="dark">
		<head>
			<meta charset="UTF-8"/>
			<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<meta name="description" content="An application to play Fantasy FRC"/>
			<meta name="google" content="notranslate"/>
			<link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.10/dist/full.min.css" rel="stylesheet" type="text/css"/>
			<script src="https://cdn.tailwindcss.com"></script>
			<link rel="stylesheet" href="/css/styles.css"/>
			<link rel="stylesheet" href="/css/tailwind.css"/>
			<title>Fantasy FRC - Build Your Ultimate Robotics Team!</title>
			<script src="https://unpkg.com/htmx.org@1.9.9" integrity="sha384-QFjmbokDn2DjBjq+fM+8LUIVrAgqcNW2s0PjAxHETgRn9l4fvX31ZxDxvwQnyMOX" crossorigin="anonymous"></script>
			<script src="https://unpkg.com/htmx.org@1.9.12/dist/ext/ws.js"></script>
			<script src="https://unpkg.com/hyperscript.org@0.9.12"></script>
		</head>
		<body class="bg-base-100 text-base-content simple-transition" hx-boost="true">
			<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
			<div class="min-h-screen bg-base-200 p-8">
				<div class="max-w-4xl mx-auto text-center space-y-8">
					<h1 class="text-5xl font-bold text-primary">🚀 Welcome to Fantasy FRC! 🚀</h1>
					<p class="text-xl">Dive into the ultimate robotics fantasy experience! 🤖 Draft elite FIRST Robotics Competition teams, strategize like a champion, and dominate the leaderboard. It's fantasy sports meets cutting-edge innovation! 🏆</p>

					<div class="divider"></div>

					<h2 class="text-4xl font-bold">What is Fantasy FRC? 🤔</h2>
					<p class="text-lg">Imagine fantasy football, but with robots! Fantasy FRC lets you build your dream squad from real FIRST Robotics Competition teams. Watch them compete in thrilling matches, earn points based on performance, and climb the ranks. No grease, no gears – just pure strategy and excitement! ⚙️</p>

					<h2 class="text-4xl font-bold">Why Join the Fun? 🎉</h2>
					<ul class="text-lg space-y-4 list-disc list-inside mx-auto max-w-2xl">
						<li>🤖 Experience robotics without the workshop – cheer for your teams from anywhere!</li>
						<li>🏆 Compete with friends and fans in real-time leaderboards.</li>
						<li>📈 Hone your strategy skills as you draft, trade, and manage your squad.</li>
						<li>🌟 Support STEM education and innovation while having a blast.</li>
						<li>🚀 Perfect for robotics enthusiasts, students, and anyone who loves a good challenge!</li>
					</ul>

					<div class="divider"></div>

					<h2 class="text-4xl font-bold">Ready to Build Your Empire? 👑</h2>
					<p class="text-lg">Join thousands of players who are already dominating the competition. Sign up today and start drafting your path to victory! 💪</p>

					<div class="space-y-4">
						<a href="/register" class="btn btn-primary btn-lg">Sign Up Now! 🎮</a>
						<p class="text-sm">Already have an account? <a href="/login" class="link link-primary">Log in here</a>.</p>
					</div>
				</div>
			</div>
		</body>
	</html>
}