package draft

import "server/web/view"

templ DraftCreateIndex (fromProtected bool, errorMessage string) {
   <section class="card w-fit bg-base-200 shadow-xl mx-auto mb-8">
		<div class="card-body pb-2">
			<h1 class="card-title border-b border-b-slate-600 pb-[4px]">
                Create Draft
			</h1>
            <h2 style="color: red; text-align: center;">{ errorMessage }</h2>
			<form
 				hx-swap="transition:true"
 				class="rounded-xl drop-shadow-xl flex flex-col gap-4 w-96 p-8"
                style="-top: -20px;"
 				action=""
 				method="post"
			>
				<label class="flex flex-col justify-start gap-2">
                    Draft Name:
					<input
 						class="input input-bordered input-primary bg-slate-800"
 						type="string"
 						name="draftName"
 						required
 						autofocus
 						disabled?={ fromProtected }
 						if fromProtected {
							value="disabled "
						}
					/>
				</label>
				<footer class="card-actions justify-end">
					<button class="badge badge-primary px-6 py-4 hover:scale-[1.1]" disabled?={ fromProtected }>
                        Create Draft
					</button>
				</footer>
			</form>
		</div>
	</section>

}

templ DraftCreate (page string, fromProtected bool, cmp templ.Component) {
    @view.Index(page, fromProtected, "") {
        @cmp
    }
}
